<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="false">

    <LinearLayout
        style="@style/x_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHabilidade"
            style="@style/label.h2.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Assistência Técnica - Computadores" />

        <TextView
            android:id="@+id/tvTitulo"
            style="@style/label.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formatação computador" />

        <TextView
            android:id="@+id/tvDetalhes"
            style="@style/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:text="preciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computadorpreciso que seja efetuado uma formatação em meu computador" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDataLancamento"
                style="@style/label.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/05/2018, 6 dias atrás"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    style="@style/label"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dollar_36dp" />

                <TextView
                    android:id="@+id/tvQuantidadePropostas"
                    style="@style/circle.success"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>