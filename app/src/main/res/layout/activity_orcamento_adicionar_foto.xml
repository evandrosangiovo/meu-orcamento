<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.orcamento.OrcamentoAdicionarFotoActivity">

    <LinearLayout
        style="@style/x_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnAdicionarNovaFotoOnClick"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/if_photo" />

        <TextView
            android:id="@+id/textView13"
            style="@style/label.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capturar nova foto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            style="@style/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAdicionarFotosSelecionadas"
            style="@style/button.success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnEnviarFotosOnClick"
            android:text="Adicionar fotos" />
    </LinearLayout>


</LinearLayout>